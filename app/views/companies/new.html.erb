<%= render "shared/header1" %>

<div class= 'company_main'>
  <h1 class= 'main_header'>+Company</h1>
  <%= form_with model: [@company], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :company_name, class: 'form-company', placeholder: 'type a conpany name' , autocomplete: 'off'%>
    <%= f.password_field :password, class: 'form-control', autocomplete: 'off'%>
  </div>
  <%= f.submit '追加', class: 'form-submit' %>
  <%= link_to 'Back', root_path, class: 'btn'%>
<% end %>
</div>